@model Kullanicilar


<div class="container shadow p-5">

    @if (TempData["KayitMsg"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["KayitMsg"]
        </div>
    }

    <form method="post" asp-action="KullaniciKayitOl">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Kayıt Ol</h2>
                <hr />
            </div>
            <div class="mb-3 row">
                <label asp-for="Ad">Kullanıcı Adı</label>
                <input type="text" asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="EPosta">E-Posta</label>
                <input type="email" asp-for="EPosta" class="form-control" />
                <span asp-validation-for="EPosta" class="text-danger"></span>
            </div>

            <div class="mb-3 row">
                <label asp-for="Sifre">Şifre</label>
                <input type="password" asp-for="Sifre" class="form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Kayıt Ol</button>
                </div>
            </div>
        </div>
    </form>
</div>
