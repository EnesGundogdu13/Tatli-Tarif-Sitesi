@model IEnumerable<Kategoriler>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container shadow p-5">
    @if (TempData["SuccessMsg"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMsg"]
        </div>
    }
    <h1 class="text-center">Kategori Listesi</h1>

    <div class="col mb-3">
        <a asp-controller="Kategori" asp-action="Create" class="btn btn-primary">Kategori Ekle</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Adı</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="33.3%">
                        @obj.Id
                    </td>
                    <td width="33.3%">
                        @obj.Ad
                    </td>
                    <td width="33.3%">
                        <a asp-controller="Kategori" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="Kategori" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
